<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:background="@color/birudongker"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="ReCash"
            android:textColor="@color/kuning"
            android:textSize="35dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:text="My Account"
        android:textColor="@color/birudongker"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="120dp"
        tools:ignore="MissingConstraints" />
<!--    My Account-->

<!--    Box-->
    <RelativeLayout
        android:layout_width="359dp"
        android:layout_height="87dp"
        android:background="@color/biru"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="187dp">

        <ImageView
            android:id="@+id/profile_zefanya"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/profile_zef"></ImageView>


        <TextView
            android:id="@+id/name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/profile_zefanya"
            android:fontFamily="@font/baloo"
            android:text="Zefanya Wijaya"
            android:textColor="@color/white"
            android:textSize="22dp"></TextView>

        <TextView
            android:id="@+id/total_pointname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_user"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-6dp"
            android:layout_toRightOf="@+id/profile_zefanya"
            android:fontFamily="@font/montserrat"
            android:text="Total Points:"
            android:textColor="@color/birudongker"
            android:textSize="16dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/total_point_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/total_pointname"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-5dp"
            android:layout_toRightOf="@+id/profile_zefanya"
            android:fontFamily="@font/montserrat"
            android:text="10.000 Points"
            android:textColor="@color/birudongker"
            android:textSize="16dp"></TextView>

    </RelativeLayout>
<!--    box-->
<!--    Invite Friends-->
    <RelativeLayout
        android:layout_width="355dp"
        android:layout_height="54dp"
        android:background="@color/abu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="306dp">

        <ImageView
            android:id="@+id/icon_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/tanda_orang"></ImageView>

        <TextView
            android:id="@+id/invite_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-6dp"
            android:layout_toRightOf="@+id/icon_1"
            android:fontFamily="@font/baloo"
            android:text="Invite Friends"
            android:textColor="@color/birudongker"
            android:textSize="26dp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>
<!--    Invite Friends End-->

<!--Challenges Start-->
    <RelativeLayout
        android:layout_width="355dp"
        android:layout_height="54dp"
        android:background="@color/abu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="379dp">

        <ImageView
            android:id="@+id/icon_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/tanda_challenge"></ImageView>

        <TextView
            android:id="@+id/challenge_temen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-6dp"
            android:layout_toRightOf="@+id/icon_2"
            android:fontFamily="@font/baloo"
            android:text="Challenges"
            android:textColor="@color/birudongker"
            android:textSize="26dp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>
    <!--    ChallengeEnd-->

<!--    SettingStart-->
    <RelativeLayout
        android:layout_width="355dp"
        android:layout_height="54dp"
        android:background="@color/abu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="453dp">

        <ImageView
            android:id="@+id/icon_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/tanda_setting"></ImageView>

        <TextView
            android:id="@+id/tanda_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-6dp"
            android:layout_toRightOf="@+id/icon_3"
            android:fontFamily="@font/baloo"
            android:text="Settings"
            android:textColor="@color/birudongker"
            android:textSize="26dp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>
    <!--    SettingEnd-->

<!--    HelpStart-->

    <RelativeLayout
        android:layout_width="355dp"
        android:layout_height="54dp"
        android:background="@color/abu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="527dp">

    <ImageView
        android:id="@+id/icon_4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:src="@drawable/tanda_tanya"></ImageView>

    <TextView
        android:id="@+id/tanda_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="-6dp"
        android:layout_toRightOf="@+id/icon_4"
        android:fontFamily="@font/baloo"
        android:text="Help"
        android:textColor="@color/birudongker"
        android:textSize="26dp"
        android:textStyle="bold"></TextView>
    </RelativeLayout>
<!--    Help-->

<!--    Button Bawah-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/biru"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="633dp">

<!--Home-->
        <Button
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/icon_home" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:fontFamily="@font/baloo"
            android:text="Home"
            android:layout_below="@+id/home"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

<!--Activity-->

        <!--        Rewards-->

        <!--        Account-->

        <Button
            android:id="@+id/application"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/home"
            android:background="@drawable/icon_activity" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_below="@+id/application"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/home"
            android:fontFamily="@font/baloo"
            android:text="Activity"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/rewards"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/application"
            android:background="@drawable/icon_rewards" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_below="@+id/rewards"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/application"
            android:fontFamily="@font/baloo"
            android:text="Rewards"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/account"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/rewards"
            android:background="@drawable/icon_account_active" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_below="@+id/account"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/rewards"
            android:fontFamily="@font/baloo"
            android:text="Account"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <!--    End-->
</androidx.constraintlayout.widget.ConstraintLayout>
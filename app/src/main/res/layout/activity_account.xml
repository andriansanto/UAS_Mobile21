<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/birudongker"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="ReCash"
            android:textColor="@color/kuning"
            android:textSize="35dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/myacc"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:text="My Account"
        android:textColor="@color/birudongker"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/linear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!--    My Account-->

    <!--    Box-->
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="359dp"
        android:layout_height="87dp"
        android:background="@color/biru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/myacc">

        <ImageView
            android:id="@+id/profile_zefanya"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/profile_zef"></ImageView>


        <TextView
            android:id="@+id/name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/profile_zefanya"
            android:fontFamily="@font/baloo"
            android:text="Zefanya Wijaya"
            android:textColor="@color/white"
            android:textSize="22dp"></TextView>

        <TextView
            android:id="@+id/total_pointname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_user"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-6dp"
            android:layout_toRightOf="@+id/profile_zefanya"
            android:fontFamily="@font/montserrat"
            android:text="Total Points:"
            android:textColor="@color/birudongker"
            android:textSize="16dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/total_point_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/total_pointname"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-5dp"
            android:layout_toRightOf="@+id/profile_zefanya"
            android:fontFamily="@font/montserrat"
            android:text="10.000 Points"
            android:textColor="@color/birudongker"
            android:textSize="16dp"></TextView>

    </RelativeLayout>
    <!--    box-->
    <!--    Invite Friends-->
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="355dp"
        android:layout_height="54dp"
        android:background="@color/abu"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/icon_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/tanda_orang"></ImageView>

        <TextView
            android:id="@+id/invite_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-6dp"
            android:layout_toRightOf="@+id/icon_1"
            android:fontFamily="@font/baloo"
            android:text="Invite Friends"
            android:textColor="@color/birudongker"
            android:textSize="26dp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>
    <!--    Invite Friends End-->

    <!--Challenges Start-->
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="355dp"
        android:layout_height="54dp"
        android:background="@color/abu"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout1">

        <ImageView
            android:id="@+id/icon_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/tanda_challenge"></ImageView>

        <TextView
            android:id="@+id/challenge_temen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-6dp"
            android:layout_toRightOf="@+id/icon_2"
            android:fontFamily="@font/baloo"
            android:text="Challenges"
            android:textColor="@color/birudongker"
            android:textSize="26dp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>
    <!--    ChallengeEnd-->

<!--    Setting-->
    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="355dp"
        android:layout_height="54dp"
        android:background="@color/abu"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout2">

        <ImageView
            android:id="@+id/icon_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/tanda_setting"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-6dp"
            android:layout_toRightOf="@+id/icon_3"
            android:fontFamily="@font/baloo"
            android:text="Settings"
            android:textColor="@color/birudongker"
            android:textSize="26dp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="355dp"
        android:layout_height="54dp"
        android:background="@color/abu"
        app:layout_constraintBottom_toTopOf="@+id/bottom_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout3">

        <ImageView
            android:id="@+id/icon_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/tanda_tanya"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-6dp"
            android:layout_toRightOf="@+id/icon_4"
            android:fontFamily="@font/baloo"
            android:text="Help"
            android:textColor="@color/birudongker"
            android:textSize="26dp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>


    <!--Bottom-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_main"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bott_back"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_home"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/bottom_main"
            app:layout_constraintEnd_toStartOf="@+id/activity"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="Home"
            android:gravity="center"
            android:fontFamily="@font/baloo"
            android:textColor="@color/birudongker"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/home"
            app:layout_constraintStart_toStartOf="@id/home"
            app:layout_constraintEnd_toEndOf="@id/home"/>

        <ImageView
            android:id="@+id/activity"
            android:layout_width="50dp"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_activity"
            app:layout_constraintStart_toEndOf="@id/home"
            app:layout_constraintTop_toTopOf="@id/bottom_main"
            app:layout_constraintEnd_toStartOf="@+id/rewards"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="Activity"
            android:fontFamily="@font/baloo"
            android:textColor="@color/birudongker"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/activity"
            app:layout_constraintStart_toStartOf="@id/activity"
            app:layout_constraintEnd_toEndOf="@id/activity" />

        <ImageView
            android:id="@+id/rewards"
            android:layout_width="50dp"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_rewards"
            app:layout_constraintStart_toEndOf="@+id/activity"
            app:layout_constraintTop_toTopOf="@+id/bottom_main"
            app:layout_constraintEnd_toStartOf="@+id/account"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="Rewards"
            android:gravity="center"
            android:fontFamily="@font/baloo"
            android:textColor="@color/birudongker"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/rewards"
            app:layout_constraintStart_toStartOf="@id/rewards"
            app:layout_constraintEnd_toEndOf="@id/rewards"/>

        <ImageView
            android:id="@+id/account"
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_account_active"
            app:layout_constraintStart_toEndOf="@id/rewards"
            app:layout_constraintTop_toTopOf="@id/bottom_main"
            app:layout_constraintEnd_toEndOf="@id/bottom_main" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="Account"
            android:gravity="center"
            android:fontFamily="@font/baloo"
            android:textColor="@color/birudongker"
            android:textSize="15dp"
            app:layout_constraintTop_toBottomOf="@id/account"
            app:layout_constraintStart_toStartOf="@id/account"
            app:layout_constraintEnd_toEndOf="@id/account"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--    End-->
</androidx.constraintlayout.widget.ConstraintLayout>
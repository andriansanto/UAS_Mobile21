<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/birudongker"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="ReCash"
            android:textColor="@color/kuning"
            android:textSize="35dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:text="My Account"
        android:textColor="@color/birudongker"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="120dp" />
    <!--    My Account-->

    <!--    Box-->
    <RelativeLayout
        android:layout_width="359dp"
        android:layout_height="87dp"
        android:background="@color/biru"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="187dp">

        <ImageView
            android:id="@+id/profile_zefanya"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/profile_zef"></ImageView>


        <TextView
            android:id="@+id/name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/profile_zefanya"
            android:fontFamily="@font/baloo"
            android:text="Zefanya Wijaya"
            android:textColor="@color/white"
            android:textSize="22dp"></TextView>

        <TextView
            android:id="@+id/total_pointname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_user"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-6dp"
            android:layout_toRightOf="@+id/profile_zefanya"
            android:fontFamily="@font/montserrat"
            android:text="Total Points:"
            android:textColor="@color/birudongker"
            android:textSize="16dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/total_point_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/total_pointname"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-5dp"
            android:layout_toRightOf="@+id/profile_zefanya"
            android:fontFamily="@font/montserrat"
            android:text="10.000 Points"
            android:textColor="@color/birudongker"
            android:textSize="16dp"></TextView>

    </RelativeLayout>
    <!--    box-->
    <!--    Invite Friends-->
    <RelativeLayout
        android:layout_width="355dp"
        android:layout_height="54dp"
        android:background="@color/abu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="28dp"
        tools:layout_editor_absoluteY="306dp">

        <ImageView
            android:id="@+id/icon_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/tanda_orang"></ImageView>

        <TextView
            android:id="@+id/invite_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-6dp"
            android:layout_toRightOf="@+id/icon_1"
            android:fontFamily="@font/baloo"
            android:text="Invite Friends"
            android:textColor="@color/birudongker"
            android:textSize="26dp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>
    <!--    Invite Friends End-->

    <!--Challenges Start-->
    <RelativeLayout
        android:layout_width="355dp"
        android:layout_height="54dp"
        android:background="@color/abu"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="379dp">

        <ImageView
            android:id="@+id/icon_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/tanda_challenge"></ImageView>

        <TextView
            android:id="@+id/challenge_temen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-6dp"
            android:layout_toRightOf="@+id/icon_2"
            android:fontFamily="@font/baloo"
            android:text="Challenges"
            android:textColor="@color/birudongker"
            android:textSize="26dp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>
    <!--    ChallengeEnd-->

    <!--    SettingStart-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutt_main"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bott_back"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_home"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="5dp"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="Home"
            android:fontFamily="@font/baloo"
            android:textColor="@color/birudongker"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="55dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_activity"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="5dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="Activity"
            android:fontFamily="@font/baloo"
            android:textColor="@color/birudongker"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="124dp"
            tools:layout_editor_absoluteY="55dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_rewards"
            tools:layout_editor_absoluteX="225dp"
            tools:layout_editor_absoluteY="5dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="Rewards"
            android:fontFamily="@font/baloo"
            android:textColor="@color/birudongker"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="222dp"
            tools:layout_editor_absoluteY="55dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_account_active"
            tools:layout_editor_absoluteX="325dp"
            tools:layout_editor_absoluteY="5dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="Account"
            android:fontFamily="@font/baloo"
            android:textColor="@color/birudongker"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="324dp"
            tools:layout_editor_absoluteY="55dp"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <!--    End-->
</androidx.constraintlayout.widget.ConstraintLayout>
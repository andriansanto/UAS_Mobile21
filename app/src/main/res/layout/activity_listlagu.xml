<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:background="@color/birudongker" />
    <TextView
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:fontFamily="@font/baloo"
        android:text="ReCash"
        android:textColor="@color/kuning"
        android:textSize="35dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="115dp"
        android:background="@color/kuning" />
    <TextView
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:fontFamily="@font/baloo"
        android:text="Hello Kunyuk!"
        android:textColor="@color/birudongker"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="170dp"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/biru"/>
    <TextView
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:fontFamily="@font/baloo"
        android:text="POINTS : "
        android:textColor="@color/birudongker"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:fontFamily="@font/baloo"
        android:text="125.000 Points"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_marginTop="280dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/kuning"/>
    <LinearLayout
        android:layout_marginLeft="95dp"
        android:layout_marginTop="250dp"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:background="@color/birudongker"/>
    <TextView
        android:layout_marginTop="265dp"
        android:gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:fontFamily="@font/baloo"
        android:text="Request Pick Up!"
        android:textColor="@color/kuning"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginTop="370dp"
        android:layout_width="350dp"
        android:layout_height="25dp"
        android:background="@color/birudongker"/>
    <TextView
        android:layout_marginTop="360dp"
        android:gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:fontFamily="@font/baloo"
        android:text="Whats New"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginTop="395dp"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:background="@color/biru"/>
    <TextView
        android:layout_marginTop="400dp"
        android:layout_marginLeft="40dp"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:fontFamily="@font/baloo"
        android:text="Get exciting promo"
        android:textColor="@color/birudongker"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@color/biru"
        android:orientation="vertical"
        android:padding="1dp"/>
    <Button
        android:id="@+id/home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/icon_home"/>
    <TextView
        android:layout_marginTop="700dp"
        android:layout_marginLeft="46dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:fontFamily="@font/baloo"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/application"
        android:layout_width="50dp"
        android:backgroundTint="@color/biru"
        android:layout_height="50dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/icon_activity"/>
    <TextView
        android:layout_marginTop="700dp"
        android:layout_marginLeft="135dp"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:fontFamily="@font/baloo"
        android:text="Activity"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/rewards"
        android:layout_width="50dp"
        android:backgroundTint="@color/biru"
        android:layout_height="50dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/icon_rewards"/>
    <TextView
        android:layout_marginTop="700dp"
        android:layout_marginLeft="227dp"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:fontFamily="@font/baloo"
        android:text="Rewards"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/account"
        android:layout_width="50dp"
        android:backgroundTint="@color/biru"
        android:layout_height="50dp"
        android:layout_marginLeft="325dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/icon_account"/>
    <TextView
        android:layout_marginTop="700dp"
        android:layout_marginLeft="324dp"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:fontFamily="@font/baloo"
        android:text="Account"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"/>















</RelativeLayout>
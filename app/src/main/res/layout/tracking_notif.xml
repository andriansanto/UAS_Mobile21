<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/header_background2"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/recash"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="25dp"
            android:text="ReCash"
            android:textColor="@color/kuning"
            android:textSize="35dp"
            android:fontFamily="@font/baloo"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_main2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/header_background3"

        app:layout_constraintTop_toBottomOf="@+id/layout_main">
        <TextView
            android:id="@+id/recash2"
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginStart="105dp"
            android:text="Hello Kunyuk!"
            android:textColor="@color/birudongker"
            android:textSize="20dp"
            android:fontFamily="@font/baloo"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/notif"
        android:layout_width="350dp"
        android:layout_height="270dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/header_background2"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/layout_main2"
        tools:layout_editor_absoluteX="30dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/notif1"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/header_background3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/pendukung_notif_1"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="25dp" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Your driver has accept your request!"
            android:textColor="@color/white"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="10dp" />

        <ImageView
            android:foregroundGravity="center"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@drawable/header_background3"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="70dp" />
        <ImageView
            android:foregroundGravity="center"
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@drawable/header_background3"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="90dp" />

        <ImageView
            android:id="@+id/notif2"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/header_background3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/pendukung_notif_1"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="115dp" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Your driver is on the way to you!"
            android:textColor="@color/white"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="100dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@drawable/header_background3"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="160dp"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@drawable/header_background3"
            tools:layout_editor_absoluteX="110dp"
            tools:layout_editor_absoluteY="180dp"/>

        <ImageView
            android:id="@+id/notif3"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/header_background3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/pendukung_notif_2"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="205dp" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:fontFamily="@font/baloo"
            android:gravity="center"
            android:text="Your driver has picked up your request!"
            android:textColor="@color/white"
            android:textSize="16dp"
            tools:layout_editor_absoluteX="60dp"
            tools:layout_editor_absoluteY="190dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/birudongker"
        android:fontFamily="@font/baloo"
        android:text="ACCEPT"
        android:textColor="@color/kuning"
        android:textSize="16dp"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="522dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutt_main"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bott_back"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_home"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="5dp"
            tools:ignore="MissingConstraints" />
        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="Home"
            android:fontFamily="@font/baloo"
            android:textColor="@color/birudongker"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="55dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_activity"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="5dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="Activity"
            android:fontFamily="@font/baloo"
            android:textColor="@color/birudongker"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="124dp"
            tools:layout_editor_absoluteY="55dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_rewards"
            tools:layout_editor_absoluteX="225dp"
            tools:layout_editor_absoluteY="5dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="Rewards"
            android:fontFamily="@font/baloo"
            android:textColor="@color/birudongker"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="222dp"
            tools:layout_editor_absoluteY="55dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_account"
            tools:layout_editor_absoluteX="325dp"
            tools:layout_editor_absoluteY="5dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="Account"
            android:fontFamily="@font/baloo"
            android:textColor="@color/birudongker"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="324dp"
            tools:layout_editor_absoluteY="55dp"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>